    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">
    <title>Nova Publicação</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/Bootstrap/css/bootstrap.css" media="all" rel="stylesheet" type="text/css" />
    <link href="~/Content/scripts/FileInput/css/fileinput.css" media="all" rel="stylesheet" type="text/css" />
    <link href="~/Content/scripts/cropper/cropper.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" media="all" rel="stylesheet" type="text/css" />
    <link href="~/Content/scripts/FileInput/js/explorer/theme.css" media="all" rel="stylesheet" type="text/css" />
    <!-- Custom styles for this template -->
    <script language="javascript" src="~/Content/JavaScript/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script language="javascript" src="~/Content/scripts/FileInput/js/sortable.js" type="text/javascript"></script>
    <link href="~/Content/scripts/FileInput/img/loading-sm.gif" type="image/svg" />
    <link href="~/Content/scripts/FileInput/img/loading.gif" type="image/svg" />
    <script language="javascript" src="~/Content/scripts/FileInput/js/piexif.js" type="text/javascript"></script>
    <script language="javascript" src="~/Content/scripts/FileInput/js/fileinput.js" type="text/javascript"></script>
    <script language="javascript" src="~/Content/scripts/FileInput/js/pt-BR.js" type="text/javascript"></script>
    <script language="javascript" src="~/Content/scripts/FileInput/js/explorer/theme.js" type="text/javascript"></script>
    <script language="javascript" src="~/Content/scripts/FileInput/js/fa/theme.js" type="text/javascript"></script>
    <script language="javascript" src="~/Content/Bootstrap/javascript/bootstrap.js" type="text/javascript"></script>
    <script language="javascript" src="~/Content/scripts/cropper/cropper.js" type="text/javascript"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/CustomStyle.css" rel="stylesheet" type="text/css" />
</head>
<body id="page-top">
    <section id="contact">
        <div class="container col-12">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-title">
                        <h2>Nova Publicação</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <form method="post" action="NovaPublicacao" enctype="multipart/form-data" accept-charset=".png, .jpg">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Titulo *" id="name" required="" data-validation-required-message="Digite o Titulo da publicação" name="Publicacao.Titulo">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Sub-Titulo *" id="name" required="" data-validation-required-message="Digite o Sub-Titulo da publicação" name="Publicacao.SubTitulo">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group-sm file-loading">
                                    <input id="input-id" type="file" name="arquivo" data-preview-file-type="text"  multiple />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group Dist">
                                    <textarea class="form-control " placeholder="Your Message *" id="message" required="" data-validation-required-message="Please enter a message." Name="Publicacao.Descricao"></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script language="javascript" src="~/Content/scripts/FileInput/js/inicializaFileInput.js"></script>
</body>
</html>
